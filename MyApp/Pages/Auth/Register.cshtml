<form method="post">
    <div asp-validation-summary="All" style="color:red;"></div>

    <div>
        <label asp-for="RegisterDto.Email"></label>
        <input asp-for="RegisterDto.Email" />
        <span asp-validation-for="RegisterDto.Email" style="color:red;"></span>
    </div>

    <div>
        <label asp-for="RegisterDto.FullName"></label>
        <input asp-for="RegisterDto.FullName" />
        <span asp-validation-for="RegisterDto.FullName" style="color:red;"></span>
    </div>

    <div>
        <label asp-for="RegisterDto.Password"></label>
        <input asp-for="RegisterDto.Password" type="password" />
        <span asp-validation-for="RegisterDto.Password" style="color:red;"></span>
    </div>

    <button type="submit">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
